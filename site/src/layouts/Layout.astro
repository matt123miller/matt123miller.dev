---
import "../styles/styles.scss";

import Footer from "@/components/Footer/index.astro";
import Header from "@/components/Header/index.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Is this wrapping div necessary? -->
    <div id="page-wrapper">
      <Header siteTitle={"hello world"} />
      <main class="flex flex-col main-content-container">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  /* purgecss start ignore */
  @import "tailwindcss/base";
  @import "tailwindcss/components";
  /* purgecss end ignore */

  @import "tailwindcss/utilities";
  :root {
    --linear-text-gradient: linear-gradient(
      45deg,
      var(--dracula-purple),
      var(--dracula-pink) 30%,
      var(--dracula-foreground) 60%
    );
    --default-animation-transition: 0.15s linear;
    /* Colours */
    --dracula-background: #282a36;
    --dracula-foreground: #f8f8f2;
    --dracula-selection: #44475a;
    --dracula-comment: #6272a4;
    --dracula-red: #ff5555;
    --dracula-orange: #ffb86c;
    --dracula-yellow: #f1fa8c;
    --dracula-green: #50fa7b;
    --dracula-purple: #bd93f9;
    --dracula-cyan: #8be9fd;
    --dracula-pink: #ff79c6;
  }

  /* TODO: Not purging css during dev, allows adding new classes in browser. 
Move the purge end below the tailwind imports for release   */

  body {
    --default-animation-transition: 0.15s linear;
    /* Colours */
    --dracula-background: #282a36;
    --dracula-foreground: #f8f8f2;
    --dracula-selection: #44475a;
    --dracula-comment: #6272a4;
    --dracula-red: #ff5555;
    --dracula-orange: #ffb86c;
    --dracula-yellow: #f1fa8c;
    --dracula-green: #50fa7b;
    --dracula-purple: #bd93f9;
    --dracula-cyan: #8be9fd;
    --dracula-pink: #ff79c6;
  }

  body {
    font-size: 14px;
    color: var(--dracula-foreground);

    background-color: var(--dracula-background);
    user-select: var(--dracula-selection);
  }
</style>
